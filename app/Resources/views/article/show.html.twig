{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <table>
        <tbody>
            <tr>
                <th>Numéro</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if article.image is not null %}
                        {% if article.mini %}
                            <img src="{{ asset('mini/') }}mini-{{ article.image.url }}" alt="miniature-{{ article.titre }}">
                        {% else %}
                            <img src="{{ asset('image/') }}{{ article.image.url }}" alt="{{ article.titre }}">
                        {% endif %}

                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Datede création</th>
                <td>{% if article.date %}{{ article.date|date('d-m-Y H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Publication</th>
                <td>{% if article.publication %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>
            <a href="{{ path('article_index') }}">Retour</a>
            <a href="{{ path('article_edit', { 'id': article.id }) }}">Modifier</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}

{% endblock %}
