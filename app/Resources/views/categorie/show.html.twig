{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categorie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Parent</th>
                <td>{{ categorie.parent }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ categorie.link }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ categorie.icon }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if categorie.image is not null %}
                        {{ categorie.image.url }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

            <a href="{{ path('categorie_index') }}">Retour</a>

            <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}">Modifier</a>

            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}

{% endblock %}
